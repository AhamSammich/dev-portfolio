---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";

import battlefleet from "../assets/battlefleet1.png";
import unscrabble from "../assets/unscrabble2.png";
import piper from "../assets/piper2.png";

const projects = [
  {
    title: "Let's Play Battleship!",
    description:
      "Play a classic game with a friend online! Built using Socket.io and Vue 3 to understand the concepts of reactive components and use of websockets.",
    videoHtml: undefined, //'<div style="position: relative; padding-bottom: 56.25%; height: 0;"><iframe src="https://www.loom.com/embed/877dc449e80543989ffeaefaa4db220e" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen style="position: absolute; top: 0; left: 0; width: 100%; height: 100%;"></iframe></div>',
    imgSrc: battlefleet,
    url: "https://play.battleship.up.railway.app",
    repo: "https://github.com/AhamSammich/lets-play-battleship",
  },
  {
    title: "Word Unscramble",
    description:
      "An anagram solver to help with all those addictive word games! Built using JavaScript and NodeJS to demonstrate use of third-party APIs.",
    videoHtml: undefined,
    imgSrc: unscrabble,
    url: "https://word-unscramble.up.railway.app",
    repo: "https://github.com/AhamSammich/word-unscramble",
  },
  {
    title: "Pen Pipes",
    description:
      "Create and save piping system diagrams! Built with vanilla JS, this project provided an extensive exploration of HTML and CSS.",
    videoHtml: undefined,
    imgSrc: piper,
    url: "https://codepen.io/ahamsammich/pen/WNzXVyb",
    repo: undefined,
  },
];
---

<Layout title="Portfolio | Andre L. Hammons">
  <section>
    <div class="card">
      {
        projects.map((project) => (
          <Fragment>
            <ProjectCard
              title={project.title}
              description={project.description}
              imgSrc={project.imgSrc}
              videoHtml={project.videoHtml}
              url={project.url}
              repo={project.repo}
            />
          </Fragment>
        ))
      }
    </div>
  </section>
</Layout>

<style>
  section {
    color: var(--color1);
  }

  img {
    width: inherit;
  }
</style>
