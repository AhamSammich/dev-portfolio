  </div>
</Layout>
<style>
  :global(header) {
    opacity: 0;
    transform: scaleY(0);
    
    @media (width >= 1000px) {
      opacity: 1;
      transform: scaleY(1);
    }
  }

  .page-container {
    scroll-snap-type: y mandatory;
    overflow-y: scroll;
  }

  .page {
    scroll-snap-align: start;
    width: 100svw;
    height: 100svh;
    overflow: hidden;

    color: var(--color1);

    display: flex;
    /* flex-direction: column; */
    justify-content: center;
    align-items: center;

    position: relative;
    z-index: 0;

    & img {
      width: 80px;
    }

    & h1 {
      font-weight: 800;
      font-size: 44px;
      display: inline;
    }
    
    & span.gradient {
      display: inline;
      background: var(--gradient);
      background-clip: text;
      color: transparent;
    }

    & span.accent {
      color: var(--accent1);
    }

    & p {
      font-size: 20px;
      letter-spacing: 0.2rem;
    }
  }

  #scroll-down {
    width: 100%;
    position: absolute;
    left: 0;
    bottom: 0;
    text-align: center;
    animation: zoom 1s linear alternate infinite;

    & > [astro-icon] {
      max-width: 50px;
      color: var(--accent3);
    }
  }

  @keyframes zoom {
    from {
      transform: translate3d(0, -5%, 0) scale(1);
    }
    to {
      transform: translate3d(0, 0, 0) scale(0.9);
    }
  }

  .card {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 0 3em;

    & > * {
      display: flex;
      flex-direction: column;
      justify-content: center;
      gap: 0.5em;
      text-align: center;
      margin: 0.5em;
    }

    & h3 {
      letter-spacing: 0.1em;
      margin-bottom: 0.5em;
    }

    & a {
      margin-top: 1.5em;
      text-decoration: none;
      color: var(--accent3);

      &:hover {
        color: var(--accent1);
        translate: 0 -10%;
      }
    }
  }

  #about-me p {
    max-width: 50ch;
    line-height: 1.5;
  }

  #tech {
    display: flex;
    flex-direction: column;
    gap: 3em;

    @media (width >= 800px) {
      flex-direction: row;
      gap: 5em;
    }
  }

  #contact {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0.5em;
    text-align: right;

    & a {
      margin: 0.25em;
      white-space: nowrap;
    }

    @media (width < 800px) {
      display: flex;
      gap: 0.25em;
      text-align: left;
    }
  }

  a > * {
    display: inline;
    padding: 0.2em;
    vertical-align: middle;
  }

  [astro-icon] {
    width: 30px;
  }
</style>
