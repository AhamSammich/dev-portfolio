---
import { Icon } from "astro-icon";
import Nav from "./Nav.astro";
const tagline = "Developer";
---

<div id="header-wrapper">
  <a href="/" target="_self">
    <div class="brand"></div>
  </a>
  <h1 data-text={tagline}>Andre <span id="mi">L</span> Hammons</h1>
  <!-- Hide for desktop site -->
  <div id="header-nav">
    <Nav />
    <a href="/#connect" target="_self" id="go-to-connect">
      <span>
        <Icon pack="ic" name="baseline-contact-page" />
      </span>
      <p>CONNECT</p>
    </a>
  </div>
</div>

<style>
  h1 {
    margin-left: 0.5rem;
    font-size: clamp(18px, 2vw, 24px);
    letter-spacing: 0.2rem;
    text-transform: uppercase;
    white-space: nowrap;
    background: var(--gradient);
    background-clip: text;
    -webkit-background-clip: text;
    color: transparent;
    position: relative;

    /* sub-title/tag-line */
    &::after {
      content: attr(data-text);
      width: 100%;
      position: absolute;
      top: 100%;
      left: 0;
      color: var(--accent3);
      text-align: right;
      font-weight: 300;
      font-size: clamp(12px, 1.5vw, 18px);
      letter-spacing: 0.1rem;
      border-top: 0.05em solid var(--color1);
      margin-top: 0.25em;
      padding: 0.25em 0;
    }
  }

  #mi {
    color: var(--color1);
    font-weight: 300;
  }

  #header-wrapper {
    width: 100%;
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 1rem;
    background-color: var(--color2a);
    box-shadow: 0 0 1rem 2rem var(--color2a);
    color: var(--color1);
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1;

    & .brand {
      width: 30px;
    }
  }

  #header-nav {
    display: flex;
    width: 100%;
    justify-content: space-around;
    align-items: center;
    margin-left: 5rem;
    @media (orientation: portrait) or (width < 1000px) {
      display: none;
    }
  }

  img {
    width: 30px;
    border-radius: 50%;
    float: left;
  }

  a#go-to-connect {
    float: right;
    background: var(--accent3);
    color: var(--color2);
    padding: 0.5rem;
    border-radius: 0.25rem;

    & > * {
      display: inline;
      vertical-align: middle;
    }

    &:hover {
      background: var(--accent1);
      color: var(--color1);
    }
  }
  [astro-icon] {
    width: 25px;
  }
</style>
