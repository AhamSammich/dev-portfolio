---
export interface Props {
  title: string;
  description: string;
  videoHtml?: string;
  imgSrc?: string;
  url?: string;
  repo?: string;
}

import { Icon } from "astro-icon";

const { title, description, videoHtml, imgSrc, url, repo } = Astro.props;
---

<section>
  <div>

    <h2>
      {title}
      <Fragment>
        {
          repo && (
            <a href={repo} target="_blank">
              <span>
                <Icon pack="mdi" name="github" />
              </span>
            </a>
          )
        }
      </Fragment>
      <Fragment>
        {
          url && (
            <a href={url} target="_blank">
              <span>
                <Icon pack="mdi" name="link-variant" />
              </span>
            </a>
          )
        }
      </Fragment>
    </h2>
    <p>{description}</p>
  </div>
  <div class="project-media">
    <div>
      {imgSrc && <img src={imgSrc} alt={description} />}
    </div>
    <div>
      {videoHtml && <Fragment set:html={videoHtml} />}
    </div>
  </div>
</section>

<style>
  section {
    height: clamp(350px, 40svh, 600px);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1em;
    padding: 0 10%;
    position: relative;

    & p {
      font-size: clamp(18px, 1.5svw, 24px);
      line-height: 1.5;
    }

    @media (width >= 800px) {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 2em;
    }
  }

  .project-media > * {
    width: clamp(200px, 80vw, 400px);

    & img {
      width: inherit;
      outline: 0.1em solid var(--accent2);
      border-radius: 0.2em;
    }
  }

  [astro-icon] {
    width: 20px;
    vertical-align: middle;
  }

  h2 {
    width: 100%;
    position: relative;
    font-size: clamp(20px, 2svw, 24px);
    white-space: wrap;

    & a {
      text-decoration: none;
      color: inherit;

      & [astro-icon] {
        float: right;
        width: 1.3em;
        z-index: 1;
        
        &:hover {
          color: var(--accent1);
          transform: scale(1.2);
        }
      }
    }
  }
</style>
