---
import Social from "./Social.astro";
---

<nav>
  <ul id="nav-links">
    <li>
      <a href="/">
        <p>About</p>
      </a>
    </li>
    <li>
      <a href="/history">
        <p>Experience</p>
      </a>
    </li>
    <li>
      <a href="/projects">
        <p>Portfolio</p>
      </a>
    </li>
    <!-- <a href="/blog"><li>Blog</li></a> -->
  </ul>
</nav>

<script>
  // highlight the current page
  const nav: Array<HTMLAnchorElement> = Array.from(
    document.querySelectorAll("nav a")
  );
  nav.forEach((a) => {
    if (window.location.href === a.href) {
      a.parentElement?.classList.toggle("active-page");
    }
  });
</script>

<style>
  nav {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
  }

  ul {
    width: 100%;
    list-style: none;
    display: flex;
    flex-direction: column;
    font-size: clamp(20px, 2.5svw, 22px);
    margin-top: 0.75em;

    @media (width >= 1000px) {
      & {
        font-size: clamp(14px, 2svw, 20px);
        flex-direction: row;
        justify-content: center;
        align-items: flex-start;
        margin-top: unset;
        margin-left: 1em;
      }
    }
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  li {
    padding: 0 0.75em;
    z-index: 5;
    position: relative;

    &.active-page {
      border-bottom: 0.05rem solid var(--accent3);
    }

    &:hover {
      color: var(--accent1);
    }

    @media (width < 1000px) or (orientation: landscape) {
      & {
        padding: 0.5em 1.5em;
        color: var(--color2);
      }

      &:hover {
        color: var(--color2);
        translate: none;
        text-shadow: none;
        background-color: var(--accent1);
        border-right: 0.2rem solid var(--color2);
        box-shadow: -0.2rem 0 var(--accent1);
      }

      &.active-page {
        color: var(--color1);
        text-shadow: 0 0 0.2em var(--color2);
        border-bottom: none;
      }
    }

    @media (width >= 1000px) {
      & {
        border: none;
        color: var(--color1);
      }

      &.active-page {
        color: var(--accent1);
        box-shadow: inset 0 -0.05rem 0 var(--accent3);
      }

      &:hover {
        color: var(--color2);
        background: var(--accent3);
        text-shadow: none;
        border: none;
        border-radius: 0.2rem;
        box-shadow: none;
      }
    }
  }
</style>
